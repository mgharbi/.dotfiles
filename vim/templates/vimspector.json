{
  "configurations": {
    "Python: Run current script": {
      "default": true,
      "autoselect": true,
      "adapter": "debugpy",
      "breakpoints": {
        "exception": {
          "caught": "N",
          "raised": "N",
          "uncaught": "Y"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${file}"
      }
    },
    "C++": {
      "default": true,
      "autoselect": true,
      "adapter": "CodeLLDB",
      "configuration": {
        "request": "launch",
        "program": "${cwd}/bin/main",
        "externalConsole": true,
        "stopAtEntry": true,
        "MIMode": "lldb",
        "logging": {
          "engineLogging": true
        }
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "N",
          "cpp_catch": "N"
        }
      }
    }
  }
}
