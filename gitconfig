[core]
	editor = vim
[color]
	ui = true
[user]
	name = Michael Gharbi
	email = michael.yanis.gharbi@gmail.com
[diff]
	tool = vimdiff
[merge]
	tool = fugitive
[difftool]
	prompt = false
[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiffsplit!\" \"$MERGED\"
[alias]
	logg = log --oneline --graph --decorate
	st = status
	ci = commit -m
	co = checkout
[alias]
  rms = "!f(){ git rm --cached \"$1\";rm -r \"$1\";git config -f .gitmodules --remove-section \"submodule.$1\";git config -f .git/config --remove-section \"submodule.$1\";git add .gitmodules; }; f"
	pullall = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
[push]
	default = matching
[credential]
[credential]
[credential]
	helper = store
[pull]
	ff = only
	rebase = false
[init]
	defaultBranch = main
[rebase]
	autoStash = true
